<h1>All Menus</h1>

<%= link_to 'Create New Menu', new_menu_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Week Start Date</th>
      <th>Breakfast Items</th>
      <th>Lunch Items</th>
      <th>Dinner Items</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.week_start_date %></td>
        <td><%= menu.breakfast_items %></td>
        <td><%= menu.lunch_items %></td>
        <td><%= menu.dinner_items %></td>
        <td>
          <%= link_to 'Show', menu_path(menu), class: "btn btn-secondary" %>
          <%= link_to 'Edit', edit_menu_path(menu), class: "btn btn-warning" %>
          <%= link_to 'Delete', menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
