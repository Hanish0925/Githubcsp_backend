<!-- app/views/items/index.html.erb -->

<h1>All Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Calories</th>
      <th>Protein</th>
      <th>Carbohydrates</th>
      <th>Fat</th>
      <th>Rating</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.calories %></td>
        <td><%= item.protein %></td>
        <td><%= item.carbohydrates %></td>
        <td><%= item.fat %></td>
        <td><%= item.rating %></td>
        <td>
          <%= link_to 'Show', item_path(item) %> |
          <%= link_to 'Edit', edit_item_path(item) %> |
          <%= link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Item', new_item_path %>
